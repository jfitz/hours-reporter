<!DOCTYPE html>
<html lang="en">
  <head>
{% include "templates/meta.html" %}
{% include "templates/title.html" %}
{% include "templates/head_bootstrap.html" %}
{% include "templates/css.html" %}
{% include "templates/head_gae_js.html" %}
</head>
<body>
<h1>Monthly summary</h1>
<table>
<tr><td width="20">&nbsp;</td><td>Client:</td><td>{{ end_client_name }}</td></tr>
<tr><td width="20">&nbsp;</td><td>Billed client:</td><td>{{ billed_client_name }}</td></tr>
<tr><td width="20">&nbsp;</td><td>Start date:</td><td>{{ start }}</td></tr>
<tr><td width="20">&nbsp;</td><td>End date:</td><td>{{ end }}</td></tr>
<tr><td width="20">&nbsp;</td><td>Contractor:</td><td>{{ contractor_id }}</td></tr>
<tr><td width="20">&nbsp;</td><td>Name:</td><td>{{ contractor_name }}</td></tr>
{% if user_id != contractor_id %}
<tr><td width="20">&nbsp;</td><td>User:</td><td>{{ user_id }}</td></tr>
<tr><td width="20">&nbsp;</td><td>Name:</td><td>{{ user_name }}</td></tr>
{% endif %}
</table>
<p></p>
{% if status == 0 %}
<table>
<tr>
<th width="20">&nbsp;</th>
<th align="left">Month start</th>
<th align="left">Month end</th>
<th align="right">Hours</th>
</tr>
{% for r in monthly_summary %}
<tr>
<td width="20">&nbsp;</td>
<td>{{ r['start_date'] }}</td>
<td>{{ r['end_date'] }}</td>
<td align="right">{{ r['hours'] }}</td>
</tr>
{% endfor %}
<tr>
<td width="20">&nbsp;</td>
<td>Total:</td>
<td></td>
<td align="right">{{ total_hours }}</td>
</tr>
</table>
{% else %}
<p>Report status was {{ status }}</p>
{% endif %}
{% include "templates/body_gae_logo.html" %}
{% include "templates/body_bootstrap.html" %}
</body>
</html>
